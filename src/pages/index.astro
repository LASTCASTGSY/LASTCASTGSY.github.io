---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Home" activeNav="home">
  <section class="hero">
    <div class="container" style="display: flex; align-items: center; gap: 2.5rem; flex-wrap: wrap;">
      <div style="flex: 1; min-width: 280px;">
        <span class="hero-label">ML Intern Candidate</span>
        <h1>Siyu Gan <span style="color: var(--color-text-muted); font-weight: 400;">(Thrain)</span></h1>
        <p class="hero-subtitle">
          I build diffusion models for time-series forecasting and imputation.
          Mathematics & Physics at the University of Houston — interested in score-based
          generative methods and AI for science.
        </p>
        <div class="hero-actions">
          <a href="https://github.com/lastcastgsy" target="_blank" class="btn btn--primary">GitHub ↗</a>
          <a href="mailto:sgan@uh.edu" class="btn btn--outline">Email me</a>
        </div>
      </div>
      <img src="/images/headshot.jpg" alt="Siyu Gan" style="width: 200px; height: 200px; border-radius: 12px; object-fit: cover; border: 2px solid #ccc;" />
    </div>
  </section>
</BaseLayout>