---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const base = import.meta.env.BASE_URL;

// ? Only generate pages for NON-ongoing projects
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  const published = projects.filter((p) => p.data.status !== "ongoing");

  return published.map((p) => ({
    params: { slug: p.slug },
    props: { project: p },
  }));
}

const { project } = Astro.props;

// Extra safety in dev/edge cases
if (project?.data?.status === "ongoing") {
  return Astro.redirect(`${base}projects/`);
}
---

<BaseLayout title={project.data.title} activeNav="projects">
  <section class="section">
    <div class="container">
      <h1>{project.data.title}</h1>

      {project.data.description && <p>{project.data.description}</p>}

      <article class="prose">
        <Content />
      </article>
    </div>
  </section>
</BaseLayout>
