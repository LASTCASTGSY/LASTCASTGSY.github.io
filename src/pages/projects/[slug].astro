---
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/global.css';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={entry.data.title} description={entry.data.description} activeNav="projects">
  <div class="container">
    <a href={`${base}projects/`} class="back-link">â† Back to projects</a>

    <article class="prose">
      <header class="article-header">
        <div class="article-meta">
          <span class={`card-status card-status--${entry.data.status}`}>{entry.data.status}</span>
          <span>{entry.data.date}</span>
        </div>
        <h1>{entry.data.title}</h1>
        <p style="font-size: 1.05rem; color: var(--color-text-secondary);">{entry.data.description}</p>
        <div class="card-tags" style="margin-top: var(--space-md);">
          {entry.data.tags.map((t: string) => <span class="tag">{t}</span>)}
        </div>
      </header>

      <Content />
    </article>
  </div>
</BaseLayout>
